<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".controller.activity.LoginAcitivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_detail"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="22.5dp"
        android:paddingRight="22.5dp"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="42dip"
            android:gravity="center"
            android:text="请选择下列一种方式："
            android:textColor="#0b0b0b"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eee"
            ></View>
        <TextView
            android:id="@+id/btn_mes"
            android:layout_width="300dp"
            android:layout_height="42dip"
            android:gravity="center"
            android:text="短信"
            android:textColor="#0b0b0b"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:background="#eee"
            ></View>
        <TextView
            android:id="@+id/btn_shequ"
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="社区"
            android:textColor="#0b0b0b"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:background="#eee"
            ></View>
        <TextView
            android:id="@+id/btn_weixin"
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:layout_marginTop="5dip"

            android:gravity="center"
            android:text="微信"
            android:textColor="#0b0b0b"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#eee"
            ></View>
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:layout_marginTop="16dip"
            android:gravity="center"
            android:text="取消"
            android:textColor="#888888"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>