        <activity android:name=".controller.activity.GenPasswordActivity" />
        <activity android:name=".controller.activity.ChatManagerActivity" />
        <activity android:name=".controller.activity.UserManagerActivity" />
        <activity android:name=".controller.activity.DoorOpenDetailActivity" />
