<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/top_bar_normal_bg"
        android:layout_height="46dp"
        android:id="@+id/relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FreeKey"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="35sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/sao"
            android:id="@+id/tv_sao"
            android:paddingLeft="325dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="300dp"
        fab:menu_colorNormal="@color/accent"
        fab:menu_colorPressed="@color/primary"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_colorRipple="@color/primary_dark"
            fab:fab_colorNormal="@color/primary"
            fab:fab_label="增加" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_colorRipple="@color/primary_dark"
            fab:fab_colorNormal="@color/primary"
            fab:fab_label="生成开门密码" />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout >