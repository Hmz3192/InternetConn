<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atguigu.im.controller.activity.GenPasswordActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="#9fd1fb"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/la_back_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ease_mm_title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:text="生成密码"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:background="@drawable/shape_detail"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="名称:"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/textView1"
                android:background="#bcbcbf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_door_name"
                android:background="@null"
                android:gravity="center"
                android:text="小区一门"
                android:textColor="@color/holo_red_light"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="开门类型："
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="#bcbcbf" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="4dp"
                    android:background="@null"
                    android:text="密码开门"
                    android:textColor="@color/holo_red_light"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="* "
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/holo_red_light"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="使用者："
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="#bcbcbf" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/et_user"
                    android:textColor="@color/black_deep"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="* "
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/holo_red_light"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="使用有效时间："
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="#bcbcbf" />

                <EditText
                    android:layout_width="100dp"
                    android:textColor="@color/black_deep"
                    android:inputType="time"
                    android:layout_marginLeft="4dp"
                    android:background="@null"
                    android:id="@+id/et_time"
                    android:maxLength="2"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="  分钟"
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/rectangle"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="* "
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/holo_red_light"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="使用原因："
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content" />


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="#bcbcbf" />
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:background="@null"
                    android:textColor="@color/black_deep"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:background="@drawable/shape_genpass"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="生成密码"
                android:id="@+id/bt_gen"
                android:textColor="@color/black_deep"

                />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
